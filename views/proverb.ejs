<%- include("partials/header") %>

<h2 class="mb-4">📜 Proverb Details</h2>

<div class="card p-4 shadow-sm mb-4">
  <p><strong>Dari:</strong> <%= proverb.textDari %></p>
  <p><strong>Pashto:</strong> <%= proverb.textPashto %></p>
  <p><strong>English:</strong> <%= proverb.translationEn %></p>
  <p><strong>Meaning:</strong> <%= proverb.meaning %></p>
  <p><strong>Category:</strong> <%= proverb.category %></p>
</div>

<div class="d-flex gap-2">
  <a href="/edit/<%= proverb.id %>" class="btn btn-primary">✏️ Edit</a>

    <form action="/proverb/<%= proverb.id %>?_method=DELETE" method="post" onsubmit="return confirm('Are you sure you want to delete this proverb?');">
    <button type="submit" class="btn btn-danger">🗑️ Delete</button>
    </form>

  <a href="/" class="btn btn-secondary">← Back to List</a>
</div>

<%- include("partials/footer") %>
